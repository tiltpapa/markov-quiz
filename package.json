{
  "name": "markov-quiz",
  "version": "1.0.0",
  "description": "Nostr マルコフ連鎖クイズ",
  "main": "./dist/index.js",
  "module": "./dist/index.umd.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:web",
    "build:web": "vite build",
    "build:cli": "tsc",
    "build:all": "npm run build:web && npm run build:cli",
    "preview": "vite preview",
    "dev:build": "vite build --mode development",
    "build:root": "vite build --base /",
    "build:github": "vite build --base /markov-quiz/",
    "bot:listen": "npm run build:cli && node dist/cli/bot/cli.js listen",
    "bot:generate": "npm run build:cli && node dist/cli/bot/cli.js generate",
    "bot:fetch-users": "npm run build:cli && node dist/cli/bot/cli.js fetch-users",
    "clean": "rm -rf dist"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "keywords": [
    "nostr",
    "quiz",
    "markov",
    "svelte"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@konemono/nostr-web-components": "^0.1.29",
    "@noble/hashes": "^1.7.1",
    "@nostr-dev-kit/ndk": "^2.14.32",
    "bootstrap": "^5.3.2",
    "budoux": "^0.6.3",
    "commander": "^13.1.0",
    "fs-extra": "^11.3.0",
    "kurwov": "^4.0.0",
    "nostr-fetch": "^0.17.0",
    "nostr-tools": "2.13.3",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.7",
    "@types/ws": "^8.18.1",
    "svelte": "^5.15.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-node-polyfills": "^0.23.0"
  }
}
